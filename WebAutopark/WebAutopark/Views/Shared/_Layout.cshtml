<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <link href="~/css/bootstrap.min.css" rel="stylesheet" type="text/css" />
    <link href="~/css/style.css" rel="stylesheet" type="text/css" />
    <title>@ViewBag.Title</title>
    @await Html.PartialAsync("_Favicons")
</head>
<body>
    <header class="container">
        <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
            <div class="navbar-brand">
                <a asp-action="Index" asp-controller="Home" class="nav-link">
                    <img alt="home" style="width: 40px; height:40px" src="~/img/homepage.png" />
                </a>
            </div>
            <ul class="navbar-nav">
                <li class="nav-item">
                    <a class="nav-link navbar-light" asp-controller="Vehicle" asp-action="ViewList">
                        Vehicles
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link navbar-light" asp-controller="VehicleType" asp-action="ViewList">
                        Vehicle types
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link navbar-light" asp-controller="VehiclePart" asp-action="ViewList">
                        Vehicle parts
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link navbar-light" asp-controller="Order" asp-action="ViewList">
                        Orders
                    </a>
                </li>
            </ul>
        </nav>
    </header>
    <div class="container">
        @RenderBody()
    </div>

    <script src="~/js/libraries/jquery.min.js"></script>
    @await Html.PartialAsync("_ValidationScriptsPartial")
    <script src="~/js/libraries/bootstrap.min.js"></script>
</body>
</html>
