@model OrderViewModel


@{
    ViewData["Title"] = "Update";
}

<div class="card">
    <div class="card-header">
        <h4 class="text-center">Update order</h4>
    </div>

    <div class="card-body">
        <form asp-action="Update" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input asp-for="OrderId" hidden="hidden"/>

            <div class="form-group row">
                <label class="col-sm-3 col-form-label">Select vehicle: </label>
                <select class="form-control" asp-for="VehicleId" asp-items="ViewBag.Vehicles">
                </select>
                <span asp-validation-for="VehicleId" class="text-danger"></span>
            </div>

            <div class="form-group row">
                <label class="col-sm-3 col-form-label">Description: </label>
                <textarea asp-for="Description" class="form-control col-sm-9"></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>

            <div class="form-group text-center my-2">
                <input type="submit" value="Update" class="btn btn-outline-success" /> |
                <a asp-action="ViewList" class="btn btn-primary">Back to List</a>
            </div>
        </form>
    </div>
</div>
