@model OrderViewModel

@{
    ViewData["Title"] = "DeleteConfirmation";
}
<div class="card">
    <div class="card-header">
        <h4 class="text-danger text-center">Are you sure you want to delete this?</h4>
    </div>
    <div class="card-body">
        <div class="form-group row">
            <label class="col-form-label col-sm-3">Name:</label>
            <input asp-for="Vehicle.ModelName" readonly="readonly" class="form-control col col-sm-8" />
        </div>

        <div class="form-group row">
            <label class="col-form-label col-sm-3">Registration number:</label>
            <input asp-for="Vehicle.RegistrationNumber" readonly="readonly" class="form-control col col-sm-8" />
        </div>

        <form asp-action="Delete" asp-route-id="@Model.OrderId">
            <div class="form-group text-center my-2">
                <input type="submit" value="Delete" class="btn btn-outline-danger" /> |
                <a asp-action="ViewList" class="btn btn-primary">Back to List</a>
            </div>
        </form>
    </div>
</div>
