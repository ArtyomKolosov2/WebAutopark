@model IEnumerable<OrderViewModel>

@{
    ViewData["Title"] = "ViewList";
}

<table class="table table-striped table-borderless table-sm">
    <thead class="thead-light">
        <tr>
            <th>
                Id
            </th>
            <th>
                Vehicle Model
            </th>
            <th>
                Registration number
            </th>
            <th>
                Description
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @item.OrderId
                </td>
                <td>
                    @item.Vehicle.ModelName
                </td>
                <td>
                    @item.Vehicle.RegistrationNumber
                </td>
                <td>
                    @item.Description
                </td>
                <td class="text-center">
                    <a asp-action="Create" asp-controller="OrderDetail" asp-route-orderId="@item.OrderId" class="btn btn-sm btn-outline-success">
                        Add part
                    </a>
                    <a asp-action="View" asp-route-id="@item.OrderId" class="btn btn-sm btn-success">
                        View
                    </a>
                    <a asp-action="Update" asp-route-id="@item.OrderId" class="btn btn-sm btn-warning">
                        Edit
                    </a>
                    <a asp-action="DeleteConfirmation" asp-route-id="@item.OrderId" class="btn btn-sm btn-danger">
                        Delete
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>

<div class="text-center">
    <a class="btn btn-primary" asp-action="Create">Add order</a>
</div>