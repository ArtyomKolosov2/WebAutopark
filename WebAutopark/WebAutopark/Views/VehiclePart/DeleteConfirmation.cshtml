@model VehiclePartViewModel

@{
    ViewData["Title"] = "DeleteConfirmation";
}
<hr />
<h2>Delete vehicle part: @Model.Name</h2>
<hr />

<div>
    <h3 class="text-center text-danger">Are you sure you want to delete this?</h3>
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.VehiclePartId)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.VehiclePartId)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Amount)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Amount)
        </dd>
        <dt>
            @Model.Price.ToString("C")
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Price)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Description)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Description)
        </dd>
    </dl>

    <form asp-action="DeleteConfirmation" asp-route-id="@Model.VehiclePartId" method="post">
        <div class="text-center">
            <input type="submit" value="Delete" class="btn btn-outline-danger" /> |
            <a asp-action="ViewList" class="btn btn-primary">Back to List</a>
        </div>
    </form>
</div>
