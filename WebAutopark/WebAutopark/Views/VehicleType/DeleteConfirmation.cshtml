@model VehicleTypeViewModel

@{ ViewData["Title"] = "Delete"; }

<hr />
<h2>Delete vehicle type: @Model.TypeName</h2>
<hr />
<div>

    <h3 class="text-center text-danger">Are you sure you want to delete this?</h3>
    <dl class="dl-horizontal">
        <dt>
            Id
        </dt>
        <dd>
            @Html.DisplayFor(model => model.VehicleTypeId)
        </dd>
        <dt>
            Name
        </dt>
        <dd>
            @Html.DisplayFor(model => model.TypeName)
        </dd>
        <dt>
            Tax coefficent
        </dt>
        <dd>
            @Html.DisplayFor(model => model.TaxCoeff)
        </dd>
    </dl>

    <form asp-action="Delete" asp-route-id="@Model.VehicleTypeId" >
        <div class="text-center">
            <input type="submit" value="Delete" class="btn btn-outline-danger" /> |
            <a asp-action="ViewList" class="btn btn-primary">Back to List</a>
        </div>
    </form>
</div>
