@model IEnumerable<VehicleTypeViewModel>

@{ ViewData["Title"] = "ViewList"; }

<hr/>
<h4 class="text-center my-1">Vehicle type list</h4>
<hr />
<table class="table table-striped table-borderless table-sm">
    <thead class="thead-light">
        <tr>
            <th>
                Id
            </th>
            <th>
                Name
            </th>
            <th>
                Tax coefficent
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
<tr>
    <td>
        @Html.DisplayFor(modelItem => item.VehicleTypeId)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.TypeName)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.TaxCoeff)
    </td>
    <td class="text-center">
        <form asp-action="DeleteConfirmation" asp-route-id="@item.VehicleTypeId" method="get">
            <a asp-action="View" asp-route-id="@item.VehicleTypeId" class="btn btn-sm btn-success">
                View
            </a>
            <a asp-action="Update" asp-route-id="@item.VehicleTypeId" class="btn btn-sm btn-warning">
                Edit
            </a>
            <button type="submit" class="btn btn-danger btn-sm">
                Delete
            </button>
        </form>
    </td>
</tr>}
    </tbody>
</table>

<div class="text-center">
    <a class="btn btn-primary" asp-action="Create">Add type</a>
</div>
