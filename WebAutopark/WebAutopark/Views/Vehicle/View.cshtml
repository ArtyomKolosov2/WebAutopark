@model VehicleViewModel

@{ ViewData["Title"] = "View"; }


<div>
    <h4>Vehicle: @Model.ModelName</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>Id</dt>
        <dd>@Html.DisplayFor(model => model.VehicleId)</dd>

        <dt>Type</dt>
        <dd> @Html.DisplayFor(model => model.VehicleType.TypeName)</dd>

        <dt>Model name</dt>
        <dd> @Html.DisplayFor(model => model.ModelName)</dd>

        <dt>Registration number</dt>
        <dd> @Html.DisplayFor(model => model.RegistrationNumber)</dd>

        <dt>Weight</dt>
        <dd>@Html.DisplayFor(model => model.Weight)</dd>

        <dt>Year</dt>
        <dd>@Html.DisplayFor(model => model.ManufactureYear)</dd>

        <dt>Mileage</dt>
        <dd> @Html.DisplayFor(model => model.Mileage)</dd>

        <dt>Fuel tank size</dt>
        <dd>@Html.DisplayFor(model => model.FuelTankAmount)</dd>

        <dt> Color </dt>
        <dd> @Html.DisplayFor(model => model.CarColor)</dd>

        <dt>Consumption</dt>
        <dd>@Html.DisplayFor(model => model.Consumption)</dd>

        <dt>Max drive range</dt>
        <dd>@Model.MaxKilometresRange.Value.ToString("0.00")</dd>

        <dt>Tax per month</dt>
        <dd>@Model.TaxPerMonth.Value.ToString("0.00")</dd>
    </dl>
</div>

<div>
    @Html.ActionLink("Update", "Update", new { id = Model.VehicleId }) |
    <a asp-action="ViewList">Back to List</a>
</div>
