@model VehicleViewModel

@{
    ViewData["Title"] = "DeleteConfirmation";
}


<div class="card">
    
    <div class="card-header">
        <h4 class="text-danger text-center">Are you sure you want to delete this?</h4>
    </div>
    <div class="card-body">
        <div class="form-group row">
            <label class="col-form-label col-sm-3">Vehicle Type:</label>
            <input asp-for="VehicleType.TypeName" readonly="readonly" class="form-control col col-sm-8" />
        </div>
        <div class="form-group row">
            <label class="col-form-label col-sm-3">Model name:</label>
            <input asp-for="ModelName" readonly="readonly" class="form-control col col-sm-8" />
        </div>
        <div class="form-group row">
            <label class="col-form-label col-sm-3">Registration number:</label>
            <input asp-for="RegistrationNumber" readonly="readonly" class="form-control col col-sm-8" />
        </div>
        <div class="form-group row">
            <label class="col-form-label col-sm-3">Weight:</label>
            <input asp-for="Weight" readonly="readonly" class="form-control col col-sm-8" />
        </div>
        <div class="form-group row">
            <label class="col-form-label col-sm-3">Manufacture year:</label>
            <input asp-for="ManufactureYear" readonly="readonly" class="form-control col col-sm-8" />
        </div>
        <div class="form-group row">
            <label class="col-form-label col-sm-3">Mileage:</label>
            <input asp-for="Mileage" readonly="readonly" class="form-control col col-sm-8" />
        </div>
        <div class="form-group row">
            <label class="col-form-label col-sm-3">Fuel tank:</label>
            <input asp-for="FuelTankAmount" readonly="readonly" class="form-control col col-sm-8" />
        </div>
        <div class="form-group row">
            <label class="col-form-label col-sm-3">Color:</label>
            <input asp-for="CarColor" readonly="readonly" class="form-control col col-sm-8" />
        </div>
        <div class="form-group row">
            <label class="col-form-label col-sm-3">Consumption:</label>
            <input asp-for="Consumption" readonly="readonly" class="form-control col col-sm-8" />
        </div>

        <div class="form-group row">
            <label class="col-form-label col-sm-3">Max range (km):</label>
            <input asp-for="MaxKilometresRange" readonly="readonly" value="@Model.MaxKilometresRange.Value.ToString("0.00")" class="form-control col col-sm-8" />
        </div>

        <div class="form-group row">
            <label class="col-form-label col-sm-3">Tax per month:</label>
            <input asp-for="TaxPerMonth" readonly="readonly" value="@Model.TaxPerMonth.Value.ToString("0.00")" class="form-control col col-sm-8" />
        </div>
    </div>
    
    <form asp-action="Delete" asp-route-id="@Model.VehicleId">
        <div class="form-group text-center my-2">
            <input type="submit" value="Delete" class="btn btn-outline-danger" /> |
            <a asp-action="ViewList" class="btn btn-primary">Back to List</a>
        </div>
    </form>
</div>
