@model WebAutopark.BusinessLogic.ViewModels.OrderDetailViewModel

@{
    ViewData["Title"] = "Update";
}

<h2>Update</h2>

<h4>OrderDetailViewModel</h4>
<hr />
<div class="card">
    <div class="card-body">
        <form asp-action="Update">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="PartId" class="control-label"></label>
                <select asp-for="PartId" asp-items="ViewBag.Parts">
                </select>
                <span asp-validation-for="PartId" class="text-danger"></span>
            </div>

            <input asp-for="OrderDetailId" hidden="hidden" class="form-control" />
            <input asp-for="OrderId" hidden="hidden" />

            <div class="form-group">
                <label asp-for="PartAmount" class="control-label"></label>
                <input asp-for="PartAmount" class="form-control" />
                <span asp-validation-for="PartAmount" class="text-danger"></span>
            </div>
            <div class="form-group text-center">
                <input type="submit" value="Save" class="btn btn-outline-success" /> |
                <a asp-action="View" asp-controller="Order" asp-route-id="@Model.OrderId" class="btn btn-primary">Back to order</a>
            </div>
        </form>
    </div>
</div>



